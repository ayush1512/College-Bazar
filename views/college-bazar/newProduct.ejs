<%- include('../layouts/boilearplate') %>
<form action="/products" method="POST" enctype="multipart/form-data" novalidate>
    <div>
        <label for="name">Full Name</label>
        <input type="text" id="name" name="productDetail[name]" required>
    </div>
    <div>
        <label for="email">Email</label>
        <input type="text" name="productDetail[email]" required>
    </div>
    <div>
        <label for="productName">Name of Product</label>
        <input type="text" name="productDetail[productName]" required>
    </div>
    <div>
        <label for="image">Upload Image</label>
        <input type="file" id="image" name="productDetail[image]" required>
    </div>
    <div>
        <label for="phoneNo">Phone Number</label>
        <input type="number" id="phoneNo" name="productDetail[phoneNo]" required>
    </div>
    <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="productDetail[price]" required>
    </div>
    <div>
        <label for="description">Product Details</label>
        <textarea id="description" name="productDetail[description]" cols="30" rows="10"></textarea>
    </div>
    <div>
        <label for="addreass">Address</label>
        <input type="text" id="addreass" name="productDetail[addreass]" required>
    </div>
    <button type="submit">Submit</button>
</form>