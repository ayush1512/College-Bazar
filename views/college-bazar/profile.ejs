<% layout('layouts/boilearplate') %>
<% block('head').append('<link rel="stylesheet" href="../css/profile.css">') %>
<div>
    <div class="profile-header">
      <div class="profile-img">
        <% if(user.photos){ %>
          <img src="<%= user.photos['url'] %>" width="200" alt="Profile Image">
        <% }else{ %>
          <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Sample_User_Icon.png" width="200" alt="Profile Image">
        <% } %>
      </div>
      <div class="profile-nav-info" >
        <h3 class="user-name" style="margin-bottom: -1px;"><%= user.username %></h3>
        <div class="/ress">
          <p id="state" class="state"><%= user.college %></p>
          <span id="country" class="country">Year <%= user.year %></span>
        </div>
  
      </div>
      <!-- <div class="profile-option">
        <div class="notification">
          <i class="fa fa-bell"></i>
          <span class="alert-message">3</span>
        </div>
      </div> -->
    </div>
  
    <div class="main-bd">
      <div class="left-side">
        <div class="profile-side">
          <p class="mobile-no"><i class="fa fa-phone"></i>+91<%= user.phone %></p>
          <p class="user-mail"><i class="fa fa-envelope"></i> <%= user.email %></p>
          <div class="user-bio" style="margin: 40px 0px;">
            <h3>Bio</h3>
            <p class="bio">
              <%= user.bio %>  
            </p>
          </div>
          <div class="profile-btn">
            <button type="reset" onclick="location.href='/logout'" class="chatbtn" id="chatBtn"></i>Logout</button>
            <button type="reset" onclick="location.href='/profile/edit'"  class="createbtn" id="Create-post"></i> Edit</button>
          </div>
        </div>
      </div>
      <div class="right-side" style="width: 100%; padding: 10px; border-radius: 5px;">
  
        <div class="profileNav">
          <ul>
            <h2 class="user-post" style="font-size: 1.5rem; font-weight: 600;">Posts</h2>
            <!-- <button onclick="tabs(1)" class="user-review" style="padding: 5px; font-size: 1.5rem; font-weight: 600;">Reviews</button> -->
          </ul>
        </div>
        <div class="profile-body">
          <div class="profile-posts tab">
            <% if(product){ %>
              <% for(prod of product){ %>
                <div class="post-card" onclick="location.href='/products/<%= prod._id %>'">
                  <div class="post-img">
                      <img src="<%= prod.fileToUpload[0].url %>" alt="Post Image">
                  </div>
                  <div class="post-info">
                      <h2><%= prod.title  %></h2>
                      <h3><%= prod.brand  %></h3>
                  </div>
                </div>
            <% } %>
            <% } %>
          </div>
          <div class="profile-reviews tab" style="flex-direction: column;">
            <h1>User reviews</h1>
            <p>No reviews yet!</p>
          </div>
          <div class="profile-settings tab">
            <div class="account-setting">
              <h1>Acount Setting</h1>
              <p>Under Development :/</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% block('footer').append('<script src="../js/profile.js"></script>') %>