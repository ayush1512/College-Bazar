<%- layout('layouts/boilearplate') %>
<ul>
    <% for(let product of products){ %>
        <div>
            <div>
                <% for(let image of product.fileToUpload){ %>
                    <img src="../proImg/<%= image %>" alt="Product Image">
                <% } %>
            </div>
            <div>
                <div>
                    <h5><%= product.title %></h5>
                    <p><%= product.description %></p>
                    <p>
                        <small class="text-muted"><%= product.location %></small>
                    </p>
                    <a  href="/products/<%= product._id %>">View <%= product.title %></a>
                </div>
            </div>
        </div>
    <% } %>
</ul>