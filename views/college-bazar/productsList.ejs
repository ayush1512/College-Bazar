<%- layout('layouts/boilearplate') %>
<ul>
    <% for(let product of products){ %>
        <div>
            <div>
                <img src="<%= product.fileToUpload.url[0] %>" alt="Product Image">
            </div>
            <div>
                <div>
                    <h5><%= product.title %></h5>
                    <p><%= product.description %></p>
                    <p>
                        <small class=""><%= product.location %></small>
                    </p>
                    <a  href="/products/<%= product._id %>">View <%= product.title %></a>
                </div>
            </div>
        </div>
    <% } %>
</ul>