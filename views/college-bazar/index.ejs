<%- layout('layouts/boilearplate') %>
  <%- include('../partials/welcomeSection') %>
    <!--list-topics start -->
    <section id="list-topics" class="list-topics">
      <div class="container">
        <div id="categories" class="list-topics-content">
          <ul>
            <li onclick="window.location.href='/?q=stationery#explore'">
              <div class="single-list-topics-content">
                <div class="single-list-topics-icon image-container">
                  <img src="/img/stationery.png" alt="" style="width: 50px; height: 50px;">
                </div>
                <h2>Stationery</h2>
              </div>
            </li>
            <li onclick="window.location.href='/?q=books#explore'">
              <div class="single-list-topics-content">
                <div class="single-list-topics-icon image-container">
                  <img src="/img/books.png" alt="" style="width: 50px; height: 50px;">
                </div>
                <h2>Books</h2>
              </div>
            </li>
            <li onclick="window.location.href='/?q=utilities#explore'">
              <div class="single-list-topics-content">
                <div class="single-list-topics-icon image-container">
                  <img src="/img/utilities.png" alt="" style="width: 50px; height: 50px;">
                </div>
                <h2>Utilities</h2>
              </div>
            </li>
            <li onclick="window.location.href='/?q=services#explore'">
              <div class="single-list-topics-content">
                <div class="single-list-topics-icon image-container">
                  <img src="/img/services.png" alt="" style="width: 50px; height: 50px;">
                </div>
                <h2>Services</h2>
              </div>
            </li>
          </ul>
        </div>
      </div><!--/.container-->

    </section><!--/.list-topics-->
    <!--list-topics end-->

    <!--explore start -->
    <section id="explore" class="explore">
      <div class="container">
        <div class="section-header">
          <h2>explore</h2>
          <p>Explore the wide range of products posted by users</p>
        </div><!--/.section-header-->
        <div class="explore-content">
          <div class="row">
            <% for(let i=0; i<Math.min(prod.length,6); i++) {%>
              <div class=" col-md-4 col-sm-6" onclick="window.location.href='/products/<%= prod[i]._id %>'" style="width: 390px; height: 700px;">
                <div class="single-explore-item">
                  <div class="single-explore-img" style="width: 350px; height: 350px;">
                    <img src="<%= prod[i].fileToUpload[0]['url'] %>" alt="explore image" style="width:-webkit-fill-available;">
                    <div class="single-explore-img-info">
                      <button >best rated</button>
                      <div class="single-explore-image-icon-box">
                        <ul>
                          <li>
                            <div class="single-explore-image-icon">
                              <i class="fa fa-arrows-alt"></i>
                            </div>
                          </li>
                          <li>
                            <div class="single-explore-image-icon">
                              <i class="fa fa-bookmark-o"></i>
                            </div>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  <div class="single-explore-txt bg-theme-1">
                    <h2><a href="#"><%= prod[i].title %></a></h2>
                    <p class="explore-rating-price">
                      <span class="explore-rating">5.0</span>
                      <a href="#"> 10 ratings</a>
                      <span class="explore-price-box">
                        From
                        <span class="explore-price">Rs.<%= prod[i].price %></span>
                      </span>
                      <a href="#"><%= prod[i].categories %></a>
                    </p>
                    <div class="explore-person">
                      <div class="row">
                        <div class="col-sm-2">
                          <div class="explore-person-img">
                            <a href="#">
                              <% if(prod[i].author.photos['url']){ %>
                                <img src="<%= prod[i].author.photos['url'] %>" alt="explore person">
                              <% }else{ %>
                                <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Sample_User_Icon.png" alt="explore person">
                              <% } %>
                            </a>
                          </div>
                        </div>
                        <div class="col-sm-10">
                          <p>
                            <%= prod[i].description %>
                          </p>
                        </div>
                      </div>
                    </div>
                    
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div><!--/.container-->

    </section><!--/.explore-->
    <!--explore end -->

    <!--reviews start -->

    <!--/.reviews-->
    <!--reviews end -->

    </section><!--/.counter-->
    <!-- statistics end -->

